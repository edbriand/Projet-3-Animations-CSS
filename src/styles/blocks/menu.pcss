.menu {
  --gap: 30px;

  background-color: var(--color-grey);

  &__container {
    background-color: var(--color-grey);
    position: relative;
    bottom: 40px;
    padding: 30px 15px;
    border-radius: 40px 40px 0 0;

    h1 {
      margin-left: 5px;
    }

    h2 {
      font-weight: 300;
      margin-left: 5px;

      &::after {
        content: "";
        display: block;
        background-color: var(--color-tertiary);
        width: 40px;
        height: 3px;
        margin-top: 4px;
      }
    }
  }

  &__img {
    object-fit: cover;
    border: none;
    width: 100%;
    height: 260px;
    image-rendering: high-quality;

    @media (min-width: 992px) {
      height: 400px;
    }
  }

  &__header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-right: 10px;
    margin-bottom: 15px;

    .like-btn {
      --y-offset: 12px;
      --x-offset: 9px;

      width: 28px;
      height: 28px;
      font-size: 28px;
    }
  }

  &__chapter-container {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
    gap: 0 var(--gap);

    @media (min-height: 1150px) and (min-width: 992px) {
      margin-top: 80px;
      margin-bottom: 40px;
    }
  }

  &__chapter {
    padding-top: 16px;
    padding-bottom: 16px;
    max-width: 460px;
    overflow: hidden;
    width: 100%;
    margin-right: auto;
    margin-left: auto;

    @media (min-width: 768px) {
      width: calc((100% / 2) - (var(--gap) / 2));
    }

    @media (min-width: 1278px) {
      width: calc((100% / 3) - (var(--gap) * 2 / 3));
    }
  }

  ul {
    display: flex;
    flex-flow: column nowrap;
    gap: 15px;
    padding: 15px 0;
  }

  .btn-primary {
    width: 190px;

    @media (min-height: 1150px) and (min-width: 992px) {
      margin-bottom: 50px;
    }
  }
}
